<% layout('layout') -%>
<div class="row">
  <div class="col-lg-6 col-md-offset-3">
    <h2 class=" text-success text-center">Edit Profile</h2>
    <% if(success.length > 0) { %>
    <div class="alert alert-success alert-dismissible">
      <button
        type="button"
        class="close"
        data-dismiss="alert"
        aria-label="close"
      >
        &times;
      </button>
      <%= success %>
    </div>
    <%} %>
    <form action="" method="POST">
      <div class="form-group">
        <label for="Name">Name:</label>
        <input
          type="text"
          class="form-control"
          value="<%= user.profile.name %>"
          name="name"
        />
      </div>
      <div class="form-group">
        <label for="address">Address:</label>
        <input
          type="text"
          class="form-control"
          value="<%= user.address %>"
          name="address"
        />
      </div>
      <% if(user.role == "teacher") { %>
      <div class="form-group">
        <label for="sallary">Sallary:</label>
        <input
          type="text"
          class="form-control"
          value="<%= user.sallary %>"
          name="sallary"
        />
      </div>
      <div class="form-group">
        <label for="subject">Subject:</label>
        <select name="subjects" class="form-control">
          <% for(let i = 0 ; i< categories.length; i++) { %>
          <option value="<%= categories[i].name %>">
            <%= categories[i].name %></option
          >

          <% } %>
        </select>
      </div>
      <div class="form-group">
        <a class="btn  text-danger" href="/add-subject"> Add new subject</a>
      </div>

      <% } %>
      <button type="submit" class="btn btn-success">Save</button>
    </form>
  </div>
</div>
