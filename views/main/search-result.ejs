<% layout('layout') %>

<% if (data.length === 0) { %>
    <h3>Search not Found</h3>
    <% }else { %>
        <h3>Results for <%= query %></h3>
        <hr>
        <div class="container">
            <div class="row">
                <% for( var i = 0 ; i<data.length; i++) { %>
                    <div class="col-md-4">
                        <a href="/product/<%= data[i]._id %>">
                            <div class="card">
                                <img class="" src="<%=data[i]._source.image %>" style="width: 95%;">
                                <div class="card-body">
                                    <h3 class="card-text"><%= data[i]._source.name %></h3>
                                    <p class="card-text"><%= data[i]._source.category.name %></p>
                                    <p class="card-text"><%= data[i]._source.price %>$</p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <% } %>
            </div> 
        </div>
        <% } %>