<% layout('layout') %>

<div class="container">
  <div class="row">
    <% if(user.role=="student"){ %>
    <div class="col-md-4">
      <img src="<%= users.profile.picture %>" />
    </div>
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <h2 class="text-primary">Name: <%= users.profile.name %></h2>
      <h3 class="text-danger">
        Subject: <%= users.subjects %>
      </h3>

      <h1 class="text-warning">Sallary: <%= users.sallary %>$</h1>

      <form method="post">
        <div class="btn-group" role="group" aria-label="...">
          <input type="hidden" name="quantity" id="quantity" value="1" />
          <!-- 
          <button type="button" id="minus" class="btn btn-default">-</button>
          <button type="button" id="total" class="btn btn-default">1</button>
          <button type="button" id="plus" class="btn btn-default">+</button>
          -->
        </div>
        <div class="form-group">
          <input
            type="hidden"
            name="product_id"
            class="form-control"
            id="quantity"
            value="<%= users._id %>"
          />
          <input type="hidden" name=priceHidden"" class="form-control"
          id="priceHidden" value="<%= users.sallary %>">

          <input
            type="text"
            name="item"
            class="form-control"
            value="<%= users.profile.name %>"
          />
          <input
            type="text"
            name="priceValue"
            class="form-control"
            id="priceValue"
            value="<%= users.sallary %>"
          />
        </div>

        <% if(users) { %>
        <button type="submit" class="btn btn-primary btn-lg">
          Reserve
        </button>
        <% } else { %>
        <a href="/signup" class="btn btn-warning btn-lg"
          >Signup to begin Buying</a
        >
        <% } %>
      </form>
    </div>
    <%} else {%>
    <div class="p-5 bg-dark">
      <h1 class="text-warning">
        This page for students only! You are not allowed to reserve courses...
      </h1>
    </div>
    <%}%>
  </div>
</div>
